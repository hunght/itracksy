{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2019",
    "module": "Node16",
    "lib": ["dom", "es2019"],
    "experimentalDecorators": true,
    "composite": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "moduleResolution": "node16",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "convex"]
}
